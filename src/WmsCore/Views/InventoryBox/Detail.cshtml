@using YL.Utils.Json;
@{
    Layout = "_LayoutH";
    @model YL.Core.Dto.Wms_InventryBoxDto
}
@section styles{
    <link rel="stylesheet" href="~/css/bootstrap-select.min.css" />
}
<div id="app" v-cloak>
    <table id="bootstraptable" class="table table-bordered text-nowrap table-hover"></table>
</div>

@section scripts{
    <script src="~/js/bootstrap-select.min.js"></script>
    <script src="~/js/defaults-zh_CN.min.js"></script>
    <script> 
         
        var app = new Vue({
            el: "#app",
            data: {
                InventoryBoxId: "@Model.InventoryBoxId",
                InventoryBoxNo:"@Model.InventoryBoxNo",
                InventoryBoxName:"@Model.InventoryBoxName",
                urlM: '',
                list: @Html.Raw(Model.Detail.JilToJson()),
                storeId: '@ViewData["currentStoreId"]'
            },
            mounted: function () {
                _self = this;
                _self.$nextTick(function () {
                    _self.$refs.storeId = '@ViewData["currentStoreId"]';
                    _self.$refs.datemin = "1900-01-01";
                    _self.$refs.datemax = "2099-01-01";
                    var obj = [{
                        checkbox: true,             //是否显示复选框
                        visible: true
                    },
                    {
                        field: 'Position',
                        title: '格号',
                        visible: false
                    },
                    {
                        field: 'MaterialNo',
                        title: '物料编号',
                        align: 'center',
                        sortable: true
                    }, 
                    {
                        field: 'MaterialOnlyId',
                        title: '物料唯一编号',
                        align: 'center',
                        sortable: true
                    },
                    {
                        field: 'MaterialName',
                        title: '物料编号',
                        align: 'center',
                        sortable: true
                    }, 
                    {
                        field: 'Qty',
                        title: '数量',
                        align: 'center',
                        sortable: true
                    },
                    {
                        field: 'UserName',
                        title: '更新者',
                        align: 'center',
                        sortable: true
                    },
                    {
                        field: 'ModifiedDate',
                        title: '最后更新时间',
                        align: 'center',
                        sortable: true,
                        formatter: function (value, row, index) {
                            return _self.jsonDateFormat(value);
                        }
                    }];             
                    var qParams = {
                        Id: "@Model.InventoryBoxId"
                    };
                    yui.table("bootstraptable", "/InventoryBox/DetailList", obj, "GET", "InventoryId", true, qParams); 
                })
            },
            computed: {
                count: function () {
                    return this.strLength(this.Remark, false);
                }
            },
            watch: {},
            methods: {}
        });
    </script>
}