@{
    Layout = "_LayoutH";
}
<header>
    <style>
        table {
            border-collapse: collapse;
            line-height: 160px;
            width: 100%;
            font-size: 70px;
            text-align: center;
            padding:20px;
        }
        td{
            border: 5px solid white
        }
    </style>
</header>
<body style="background:black;color:yellow;margin:20px">
    <table style="" >
        <tr>
            <td colspan="4">立库使用情况</td>
        </tr>
        <tr>
            <td width="25%">料箱总数</td>
            <td width="25%">@ViewBag.TotalInventoryBox</td>
            <td width="25%">已用料箱</td>
            <td width="25%">@ViewBag.UsedInventoryBox</td>
        </tr>
        <tr>
            <td>出库中料箱</td>
            <td>@ViewBag.OutingInventoryBox</td>
            <td>出库料箱</td>
            <td>@ViewBag.OutedInventoryBox</td>
        </tr>
        <tr>
            <td>归库中料箱</td>
            <td>@ViewBag.BackingInventoryBox</td>
            <td>离库料箱</td>
            <td>@ViewBag.NoneInventoryBox</td>
        </tr>
        <tr>
            <td>本日入库任务</td>
            <td>@ViewBag.StockInCount</td>
            <td>已完成入库</td>
            <td>@ViewBag.StockInedCount</td>
        </tr>
        <tr>
            <td>本日出库任务</td>
            <td>@ViewBag.StockOutCount</td>
            <td>已完成出库</td>
            <td>@ViewBag.StockOutedCount</td>
        </tr>
    </table>
</body>
<script>
    function refresh() {
        window.location.reload();
    }
    setTimeout(refresh, 30000);
</script>