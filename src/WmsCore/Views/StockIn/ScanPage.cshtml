@{
    Layout = "_LayoutH";
    @model YL.Core.Entity.Wms_stockin
}
@section styles{
    <style>
        .group-header {
            margin: 8px;
            background: #3c8dbc;
            color: white;
        }
        .group-body{
            margin:8px
        }
    </style>
    <link rel="stylesheet" href="~/css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
}
<div id="app" v-cloak>
    <div class="form-group">
        <div class="group-header">
            <label class="control-label col-sm-2">入库单信息区</label>
        </div>
        <div class="group-body">
            <table>
                <tr>
                    <td style="width:200px">
                        <label class="control-label">入库单号</label>
                    </td>
                    <td style="width:200px">
                        <label class="control-label">订单号</label>
                    </td>
                    <td>
                        <label class="control-label">备注</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Model.StockInNo
                    </td>
                    <td>
                        @Model.OrderNo
                    </td>
                    <td>
                        @Model.Remark
                    </td>
                </tr>
            </table>
        </div>
    </div>
     
    <form class="form-horizontal" onsubmit="return false">
        <div >
            <div class="group-header">
                <label class="control-label col-sm-2">操作区</label>
            </div>
            <div class="group-body">
                <label class="control-label col-sm-2" >输入：</label>
                <input type="text" v-model="InputNo" style="width:80%" @@keyup.enter="onInputNo">
            </div>
        </div>
        <div >
            <div class="group-header">
                <label class="control-label col-sm-2">料箱信息区</label>
            </div>
            <div class="group-body">
                <label class="control-label col-sm-2">编号：</label>
                <input type="text" v-model="InventoryBoxNo" readonly="readonly" value="">
                <input type="text" v-model="InventoryBoxName" readonly="readonly" value="">
            </div>
        </div>
        <div >
            <div class="group-header">
                <label class="control-label col-sm-2">物料信息区</label>
            </div>
            <div class="group-body">
                <el-table :data="tableData"
                          ref="table"
                          tooltip-effect="dark"
                          border
                          stripe>

                    <el-table-column label="序号" type="index" width="60" align="center"></el-table-column>
                    <el-table-column label="物料编号" prop="MaterialNo" align="center"></el-table-column>
                    <el-table-column label="物料名" prop="MaterialName" align="center"></el-table-column>
                    <el-table-column label="计划数" prop="PlanInQty" align="center"></el-table-column>
                    <el-table-column label="已入库数" prop="ActInQty" align="center"></el-table-column>
                    <el-table-column label="操作">
                        <template slot-scope="scope">
                            <el-button size="mini"
                                       type="danger"
                                       v-if="!scope.row.editing"
                                       icon="el-icon-delete"
                                       @@click="handleDelete(scope.$index)">
                                删除
                            </el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </div>
        </div>
        <div class="box-footer">
            <div class="pull-right box-tools">
                <input v-on:click="okL" class="btn btn-primary radius" type="button" v-model="submit">
            </div>
        </div>
    </form>
</div>

@section scripts{
    <script src="~/js/bootstrap-select.min.js"></script>
    <script src="~/js/defaults-zh_CN.min.js"></script>
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
    <script>
        var app = new Vue({
            el: "#app",
            data: {
                submit: "确定",
                InputNo: "",
                InventoryBoxId : "0",
                InventoryBoxNo: "未扫描",
                InventoryBoxName: "-",
                tableData: []
            },
            computed: {
                count: function () {
                    return this.strLength(this.Remark, false);
                }
            },
            mounted: function () {
                var _self = this;
                _self.$nextTick(function () {

                });
            },
            methods: {
                handleDelete: function (index) { //删除行数
                    this.tableData.splice(index, 1)
                },
                onInputNo: function (e) {
                    var _self = this;
                    var inputNo = e.srcElement.value; 
                    if (inputNo.length == 0) { return; }
                    else if (inputNo[0] == 'I') {
                        var url = "/InventoryBox/Search?storeId=@ViewData["currentStoreId"]&text=" + inputNo;
                        yui.$axiosget(url).then(function (res) {
                            if (res.data.rows.length == 0) { 
                                layer.msg("无效料箱编号", { icon: 2 });
                            }
                            else {
                                _self.InventoryBoxId = res.data.rows[0].InventoryBoxId;
                                _self.InventoryBoxNo = res.data.rows[0].InventoryBoxNo;
                                _self.InventoryBoxName = res.data.rows[0].InventoryBoxName;
                            }
                        }).catch(function (res) {
                            layer.msg("料箱查询发生错误" + res, { icon: 2 });
                        });
                    }
                    else if (inputNo[0] == 'B') {
                        var url = "/StockIn/SearchMaterial?storeId=@ViewData["currentStoreId"]&stockInId=@Model.StockInId&materialNo=" + inputNo;
                        yui.$axiosget(url).then(function (res) {
                            if (res.data.data == null) { 
                                layer.msg(res.data.message, { icon: 2 });
                            }
                            else {
                                var list = {
                                    MaterialId: res.data.data.materialId,
                                    MaterialNo: res.data.data.materialNo,
                                    MaterialName: res.data.data.materialName,
                                    PlanInQty: res.data.data.planInQty,
                                    ActInQty: res.data.data.actInQty
                                }
                                _self.tableData.unshift(list);
                            }
                        }).catch(function (res) {
                            layer.msg("物料查询发生错误" + res, { icon: 2 });
                        });
             
                    }
                    app.InputNo = "";
                },
                okL: function () {
                    var _self = this;
                    if (_self.InventoryBoxNo.length <= 0) {
                        layer.msg("请扫码料箱", { icon: 2 });
                        return false;
                    }
                    if (_self.tableData.length == 0) {
                        layer.msg("请扫码物料", { icon: 2 });
                        return false;
                    }

                    var index = layer.load(1, {
                        shade: [0.1, '#fff'] //0.1透明度的白色背景
                    });
                    var data = { 
                        stockInId: '@Model.StockInId',
                        inventoryBoxId: _self.InventoryBoxId,
                        materials: _self.tableData,
                        remark: _self.Remark
                    };
                    yui.$axiospostform('/StockIn/DoScanComplate', data)
                        .then(function (response) {
                            if (response.data.isSccuess) {
                                parent.refreshL();
                                layer.msg("", { icon: 1, time: 1000 });
                                setTimeout(function () {
                                    yui.layer_close3();
                                }, 1000);
                                return false;
                            }
                            else {
                                layer.msg(response.data.message, { icon: 5 });
                            }
                            layer.close(index);
                        })
                        .catch(function (error) {
                            layer.close(index);
                        });
                },
                refresh: function (id) { 
                }
            }
        });
    </script>
}